<%- include('../layouts/main') %>

<div class="container">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2>Feedback List</h2>
        </div>
        <div class="col-md-4 text-end">
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newFeedbackModal">
                <i class="fas fa-plus"></i> New Feedback
            </button>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="input-group">
                <input type="text" id="searchInput" class="form-control" placeholder="Search feedback...">
                <button class="btn btn-outline-secondary" type="button">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </div>
        <div class="col-md-6">
            <div class="btn-group float-end">
                <button type="button" class="btn btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown">
                    Export
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#" onclick="exportFeedback('csv')">Export as CSV</a></li>
                    <li><a class="dropdown-item" href="#" onclick="exportFeedback('json')">Export as JSON</a></li>
                </ul>
            </div>
            <div class="btn-group float-end me-2">
                <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                    Filter by Category
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#" onclick="filterFeedback('all')">All</a></li>
                    <li><a class="dropdown-item" href="#" onclick="filterFeedback('bug')">Bugs</a></li>
                    <li><a class="dropdown-item" href="#" onclick="filterFeedback('feature')">Features</a></li>
                    <li><a class="dropdown-item" href="#" onclick="filterFeedback('improvement')">Improvements</a></li>
                    <li><a class="dropdown-item" href="#" onclick="filterFeedback('other')">Other</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="row">
        <% feedbacks.forEach(feedback => { %>
            <div class="col-md-6 mb-4">
                <div class="feedback-item" 
                     data-category="<%= feedback.category %>"
                     data-status="<%= feedback.status %>"
                     data-priority="<%= feedback.priority %>"
                     data-created-at="<%= feedback.createdAt %>">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <h5 class="feedback-title mb-0"><%= feedback.title %></h5>
                        <span class="badge status-<%= feedback.status %>"><%= feedback.status %></span>
                    </div>
                    <p class="feedback-content text-muted mb-2"><%= feedback.content %></p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <span class="badge bg-secondary me-2"><%= feedback.category %></span>
                            <span class="priority-<%= feedback.priority %>">
                                <i class="fas fa-flag"></i> <%= feedback.priority %>
                            </span>
                        </div>
                        <div class="text-muted">
                            <small>
                                <i class="fas fa-user"></i> <%= feedback.user.username %> |
                                <i class="fas fa-clock"></i> <%= new Date(feedback.createdAt).toLocaleDateString() %>
                            </small>
                        </div>
                    </div>
                    <div class="mt-2">
                        <a href="/feedback/<%= feedback._id %>" class="btn btn-sm btn-outline-primary">View Details</a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<!-- New Feedback Modal -->
<div class="modal fade" id="newFeedbackModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">New Feedback</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="feedbackForm" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" class="form-control" id="title" name="title" required>
                        <div class="invalid-feedback">
                            Please enter a title.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="content" class="form-label">Content</label>
                        <textarea class="form-control" id="content" name="content" rows="3" required></textarea>
                        <div class="invalid-feedback">
                            Please enter feedback content.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="category" class="form-label">Category</label>
                        <select class="form-select" id="category" name="category" required>
                            <option value="">Select category</option>
                            <option value="bug">Bug</option>
                            <option value="feature">Feature</option>
                            <option value="improvement">Improvement</option>
                            <option value="other">Other</option>
                        </select>
                        <div class="invalid-feedback">
                            Please select a category.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="priority" class="form-label">Priority</label>
                        <select class="form-select" id="priority" name="priority" required>
                            <option value="">Select priority</option>
                            <option value="low">Low</option>
                            <option value="medium">Medium</option>
                            <option value="high">High</option>
                        </select>
                        <div class="invalid-feedback">
                            Please select a priority.
                        </div>
                    </div>
                    <div class="text-end">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Submit Feedback</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 